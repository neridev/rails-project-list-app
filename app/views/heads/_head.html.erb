<div id="<%= dom_id head %>">
  <p>
    <strong>Name:</strong>
    <%= head.name %>
  </p>

  <p>
    <strong>Surname:</strong>
    <%= head.surname %>
  </p>

  <p>
    <strong>Position:</strong>
    <%= head.position %>
  </p>

  <p>
    <strong>Techlead:</strong>
    <%= head.techlead %>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= head.notes %>
  </p>

  <p>
    <strong>Projects:</strong>
      <% Project.all.each do |project| %>
        <div>
          <%= check_box_tag :projects, project.id, head.projects.include?(project), :name => 'head[projects][]', id: "project_#{project.id}", disabled: true %>
          <%= label_tag :projects, project.name, for: "project_#{project.id}" %>
        </div>
      <% end %>
  </p>

</div>
